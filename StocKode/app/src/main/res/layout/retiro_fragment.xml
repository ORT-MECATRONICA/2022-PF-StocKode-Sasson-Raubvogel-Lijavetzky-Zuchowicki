<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FragmentRetiro"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txtStocKode6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/PrimaryColor"
        android:text="StocKode"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bordes_botones"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStocKode6"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgProductoRet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/led"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <TextView
        android:id="@+id/txtCantidadRet"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bordes_botones"
        android:text="Cantidad en Stock:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/imgProductoRet" />

    <TextView
        android:id="@+id/CantStock2"
        android:layout_width="99dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/txtCantidadRet"
        app:layout_constraintEnd_toEndOf="@+id/txtCantidadRet"
        app:layout_constraintStart_toStartOf="@+id/txtCantidadRet"
        app:layout_constraintTop_toTopOf="@+id/txtCantidadRet" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bordes_botones"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12" />

    <ImageView
        android:id="@+id/imgCantidadRet"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/cantidad"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <EditText
        android:id="@+id/editTextCantidadRet"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/PrimaryColor"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgCantidadRet"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <Button
        android:id="@+id/btnRetirar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/estilo_botones"
        android:text="Retirar"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14" />

</androidx.constraintlayout.widget.ConstraintLayout>